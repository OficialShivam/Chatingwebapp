
<html>
<head>
    <title>Admin Login</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Areas/Admin/LoginpageCss.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">
</head>
<body class="main-bg">
    <div class="login-container text-c animated flipInX">
        <div>
            <h1 class="logo-badge text-whitesmoke"><span class="fa fa-user-circle"></span></h1>
        </div>
        <h3 class="text-whitesmoke">Add new Freands</h3>
        <p class="text-whitesmoke">Contect</p>
        <div class="container-content">
            @using (Html.BeginForm("AddNewUserChatCOnntect", "UserHome"))
            {
                <div class="form-group">
                    <input type="text" class="form-control" name="NewUerName" placeholder="Username" required="">
                </div>
                <div class="form-group">
                    <input type="tel" class="form-control" name="AddNewUserPhone" placeholder="9123*****89" required="">
                </div>
                <div class="form-group">
                    <input type="tel" class="form-control" name=""  value="@TempData["Message"]" hidden="hidden">
                </div>
                
                <button type="submit" class="form-button button-l margin-b">ADD To Contect</button>

                <a class="text-darkyellow" href="#"><small>Old Number</small></a>
                @*<p class="text-whitesmoke text-center"><small>AddUser</small></p>
            <a class="text-darkyellow" href="#"><small>Sign Up</small></a>*@
            }
        </div>
    </div>
</body>
</html>
